{
  "parser": "babel-eslint",
  "plugins": [
    "meteor",
    "prettier"
  ],
  "extends": [
    "airbnb-base",
    "plugin:meteor/recommended"
  ],
  "env": {
    "node": true,
    "browser": false,
    "meteor": true
  },
  "settings": {
    "prettier/prettier": "error",
    "import/core-modules": ["meteor"],
    "import/resolver": {
      "meteor": {
        "extensions": [
          ".jsx",
          ".js"
        ]
      }
    }
  },
  "rules": {
    "no-underscore-dangle": [ "error", { "allow": [ "_id" ] } ],
    "import/no-unresolved": [ "error", { ignore: ['meteor/'] } ]
  }
}
